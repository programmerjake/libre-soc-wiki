# Move From One Condition Register Field 

XFX-Form

* mfocrf RT,FXM

    RT <- undefined
    count <- 0
    do i = 0 to 7
      if FXM[i] = 1 then
        n <- i
        count <- count + 1
    if count = 1 then
        RT <- [0]*64
    RT[4*n+32:4*n+35] <- CR[4*n+32:4* n+35]

