# Store Byte

D-Form

* stb RS,D(RA)

    if RA = 0 then b <-  0
    else           b <-  (RA)
    EA <- b + EXTS(D)
    MEM(EA, 1) <- (RS)[56:63]

# Store Byte Indexed

X-Form

* stbx RS,RA,RB

    if RA = 0 then b <- 0
    else           b <- (RA)
    EA <- b + (RB)
    MEM(EA, 1) <- (RS)[56:63]

# Store Byte with Update

D-Form

* stbu RS,D(RA)

    EA <- (RA) + EXTS(D)
    MEM(EA, 1) <- (RS)[56:63]
    RA <- EA

# Store Byte with Update Indexed

X-Form

* stbux RS,RA,RB

    EA <- (RA) + (RB)
    MEM(EA, 1) <- (RS)[56:63]
    RA <- EA
