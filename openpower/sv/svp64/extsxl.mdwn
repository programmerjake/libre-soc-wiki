# Implementation

    class Helper:
        def __init__(self, XLEN):
            self.XLEN = XLEN

        def EXTSXL(self, value, bits):
            bits = min(bits, self.XLEN)
            return SelectableInt(exts(value.value, bits), self.XLEN)

